{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@team-utilisation-monitor/api/feature": [
        "libs/api/feature/src/index.ts"
      ],
      "@team-utilisation-monitor/api/shared/data-access": [
        "libs/api/shared/data-access/src/index.ts"
      ],
      "@team-utilisation-monitor/client/authentication/feature": [
        "libs/client/authentication/feature/src/index.ts"
      ],
      "@team-utilisation-monitor/client/example/feature": [
        "libs/client/example/feature/src/index.ts"
      ],
      "@team-utilisation-monitor/client/signup-as-company/feature": [
        "libs/client/signup-as-company/feature/src/index.ts"
      ],
      "@team-utilisation-monitor/client/signup-as-individual/feature": [
        "libs/client/signup-as-individual/feature/src/index.ts"
      ],
      "@team-utilisation-monitor/client/signup-as-team/feature": [
        "libs/client/signup-as-team/feature/src/index.ts"
      ],
      "@team-utilisation-monitor/repository/data-access": [
        "libs/repository/data-access/src/index.ts"
      ],
      "@team-utilisation-monitor/service/feature": [
        "libs/service/feature/src/index.ts"
      ],
      "@team-utilisation-monitor/shared/services/prisma-services": [
        "libs/shared/services/prisma-services/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
