generator client {
  provider = "prisma-client-js"
  binaryTargets=["debian-openssl-1.1.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserDetails{
  id Int @id @default(autoincrement())
  name String 
  surname String
  username String @unique //username is email
  password String @unique
  token String @unique
  role  Role @default(USER)

  @@map("user_details")
}

enum Role{
  ADMIN
  USER
}